<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/borderlines"
    android:id="@+id/cardView"
    >

    <RelativeLayout
        android:id="@+id/lineSeeds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/textViewVariety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_toStartOf="@id/viewBtn"
            android:layout_alignParentStart="true"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/viewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/primary_button"
            android:drawableStart="@drawable/ic_remove_red_eye_white_24dp"
            android:text="@string/viewBtn"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewDateplanted"
            android:layout_below="@id/textViewVariety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CACACA"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>