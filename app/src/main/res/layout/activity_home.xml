        </LinearLayout>-->

        <LinearLayout
            android:id="@+id/btnFirstLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="horizontal"
            android:layout_below="@id/homeActLegend">

            <LinearLayout
                android:id="@+id/linearList"
                android:layout_marginEnd="15dp"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/home_button"
                android:orientation="vertical"
                android:padding="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorWhite"

                    app:srcCompat="@drawable/file"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#FFFF"
                    android:gravity="center"
                    android:text="COLLECTED LIST"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearAdd"
                android:layout_marginStart="15dp"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/home_button"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorWhite"

                    app:srcCompat="@drawable/add"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#FFFF"
                    android:gravity="center"
                    android:text="ADD DATA"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:paddingBottom="15dp"
            android:orientation="horizontal"
            android:layout_below="@id/btnFirstLinear">

            <LinearLayout
                android:id="@+id/linearSent"
                android:layout_marginEnd="15dp"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/home_button"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorWhite"

                    app:srcCompat="@drawable/sent_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#FFFF"
                    android:gravity="center"
                    android:text="SENT DATA"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearAbout"
                android:layout_marginStart="15dp"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/home_button"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorWhite"

                    app:srcCompat="@drawable/rsis_light"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#FFFF"
                    android:gravity="center"
                    android:text="ABOUT"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:id="@+id/homeCopyRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/homeTvVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"
                android:text="Version: 1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"
                android:text="RSIS - all rights reserved. Copyright (c) 2021"/>
        </LinearLayout>
    </RelativeLayout>
    
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#E8E8E8"
        app:menu="@menu/nav_menu"
        app:itemTextColor="#7C7C7C"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_layout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical">
            <TextView
                android:paddingBottom="15dp"
                android:textColor="#FFFF"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rsis.philrice.gov.ph"
                android:autoLink="web"
                android:id="@+id/infoTxtCredits"
                android:layout_centerInParent="true"
                android:linksClickable="true"/>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>