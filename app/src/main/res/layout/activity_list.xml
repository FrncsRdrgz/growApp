<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="govph.rsis.growapp.HomeActivity"
    android:id="@+id/list_drawer_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#E8E8E8"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/main_toolbar"
                app:titleTextColor="#FEFAF5"
                android:background="#1B8040">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:dividerPadding="8dp"
                    android:paddingEnd="15dp"
                    android:orientation="horizontal"
                    android:showDividers="end">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/listTvCollected"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Collected List: 0"
                            android:gravity="center"

                            android:textColor="#FEFAF5"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="end">
                        <TextView
                            android:id="@+id/listBtnAdd"
                            android:drawableRight="@drawable/ic_baseline_add_24_white"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:textColor="#FFFF"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView1"
            android:layout_below="@id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/listCopyright"
            tools:listitem="@layout/item_seeds"/>
        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No Records found."
            android:layout_above="@id/listCopyright"

            android:visibility="gone"/>
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:id="@+id/listCopyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/listTvVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"
                android:text="Version: 1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"
                android:text="RSIS - all rights reserved. Copyright (c) 2021"/>
        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#E8E8E8"
        app:menu="@menu/nav_menu"
        app:itemTextColor="#7C7C7C"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical">
            <TextView
                android:paddingBottom="15dp"
                android:textColor="#FFFF"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rsis.philrice.gov.ph"
                android:autoLink="web"
                android:id="@+id/infoTxtCredits"
                android:layout_centerInParent="true"
                android:linksClickable="true"/>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
