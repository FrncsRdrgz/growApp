<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="govph.rsis.growapp.HomeActivity">
    <LinearLayout
        android:id="@+id/linearSentToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFF"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="120dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/rsisnew"
                >
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/sentTvWelcomeName"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:background="?attr/selectableItemBackground"
                    android:drawablePadding="8dp"
                    android:textColor="#000000"
                    android:text="Welcome: John Doe"/>
                <TextView
                    android:id="@+id/sentTvSerial"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:textSize="20sp"
                    android:background="?attr/selectableItemBackground"
                    android:drawablePadding="8dp"
                    android:textColor="#000000"
                    android:text="Serial: R-0000xxxx"/>
            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/sent_toolbar"
            layout="@layout/sent_toolbar"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borderlines"
                android:gravity="center"
                android:textSize="20sp"
                android:text="SENT LIST"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSent"
        android:layout_below="@id/linearSentToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_sent"/>
</RelativeLayout>